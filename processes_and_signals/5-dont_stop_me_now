#!/usr/bin/env bash
#This describes the termination 
# Store the PID of the 4-to_infinity_and_beyond process
#!/bin/bash

# Store the PID of the 4-to_infinity_and_beyond process
PID=$(pgrep -f "4-to_infinity_and_beyond")

# Start the 4-to_infinity_and_beyond process in the background if it's not already running
if [ -z "$PID" ]; then
    ./4-to_infinity_and_beyond &
    PID=$!
fi

# Wait for a keypress to continue
read -n 1 -s -r -p "Press any key to stop the process..."

# Send the SIGTERM signal to terminate the process
kill $PID > /dev/null 2>&1

echo "Process terminated"

